
<IfModule mod_rewrite.c>
    RewriteEngine On

    # If the request is not already in /public, send it there
    RewriteCond %{REQUEST_URI} !^/public
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# Block sensitive files and folders
<FilesMatch "^(\.env|\.env\..*|\.git|composer\.json|composer\.lock|artisan|server\.php|storage|vendor)">
    Order allow,deny
    Deny from all
</FilesMatch>


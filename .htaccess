<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect all requests to the public folder
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
<FilesMatch "(\.env|artisan|composer\.(json|lock)|server\.php|phpunit\.xml)">
    Require all denied
</FilesMatch>

RedirectMatch 404 ^/vendor/
RedirectMatch 404 ^/storage/


<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Send everything to the public folder
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>
<FilesMatch "(\.env|artisan|composer\.(json|lock)|server\.php)">
    Require all denied
</FilesMatch>

RedirectMatch 404 ^/vendor/
RedirectMatch 404 ^/storage/
